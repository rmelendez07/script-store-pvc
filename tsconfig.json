{
    "compilerOptions": {
      "lib": [
        "es6",
        "DOM"
     ],
     "target": "es2017",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "dist",
     "resolveJsonModule": true,
     "emitDecoratorMetadata": true,
     "esModuleInterop": true,
     "experimentalDecorators": true,
     "sourceMap": true
    },
    "include": ["next-env.d.ts", "*.ts", "**/*.ts"],
    "exclude": ["node_modules"]
  }